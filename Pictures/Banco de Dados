create table livro
(	id SERIAL not null,
	titulo VARCHAR(100) not null,
	genero VARCHAR(100) not null,
	autor VARCHAR(100) not null,
	CONSTRAINT pk_livro PRIMARY KEY(id) 
);

insert into livro (titulo, genero, autor) values
	
